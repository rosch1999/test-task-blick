<style>
    .outer-wrapper{
      position: relative;
      height: 100%;
      max-width: 500px;
      /*margin: 0 20px 0 auto;*/
      margin: 0 auto;
      font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
      font-size: 14px;
      color: #000;
      padding: 0;
      display: flex;
    }

    .swiper-slide {
      text-align: center;
      font-size: 18px;
      background: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      width: 90%;
    }

    .swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 7px;
    }

    .swiper {
      width: 100%;
      height: 300px;
      margin-left: auto;
      margin-right: auto;
    }

    .swiper-slide {
      background-size: cover;
      background-position: center;
    }

    .mySwiper2 {
      height: 80%;
      width: 100%;
    }

    .mySwiper {
      height: 20%;
      box-sizing: border-box;
    }

    .mySwiper .swiper-slide {
      width: 90% !important;
      height: 100%;
      opacity: 0.4;
    }

    .mySwiper .swiper-slide-thumb-active {
      opacity: 1;
    }

    .swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
      margin-bottom: 7px;
    }
    .display-flex {
        display: flex;
        flex-direction: column;
    }
    .product_title {
      font-size: 20px;
      font-weight: bold;
    }
   
    .old-price {
      text-decoration: line-through;
      font-size: 15px;
    }
    .new-price {
      color: blue;
      font-size: 15px;
    }
    .mws {
      font-size: 10px;
    }
    .new-price-wrapper {
      margin-left: 20px;
    }
    .sub_title,
    .availability {
      font-size: 13px;
    }
    .availability {
      color: #71dc71;
      display: flex;
      align-items: center;
    }
    .section-container {
      display: block;
      margin: 50px 0;
    }
    .product-information {
      margin: 0 auto 35px 17px;
      display: flex;
      align-items: center;
    }
    .info-box {
      box-shadow: 0px 1px 17px 1px #d7d7d7;
      border-radius: 6px;
      padding: 0 15px 15px 15px;
      width: 400px;
    }
    .swiper-button-next,
    .swiper-button-prev {
      color: #000;
      position: relative;
      bottom: -5px;
    }
    .swiper-button-next:after,
    .swiper-button-prev:after {
      font-size: 14px;
    }
    .swiper-button-next {
      left: 50%
    }
    .swiper-button-prev {
      left: 42%;
      bottom: 17px;
    }
    #shopify-section-{{ section.id }} .add-to-card {
      background: blue;
      color: #fff;
      border-radius: 3px;
    }
    .icon-blocks {
      display: flex;
      justify-content: space-between;
      margin: 0 20px;
    }
    .text-with-icon {
      display: flex;
      justify-content: center;
      font-size: 15px;
    }
    .flex {
      display: flex;
    }
    .text {
      margin-left: 15px;
    }
    .text p {
      margin: 0;
    }
    .text p:first-child {
      font-weight: bold;
    }
    .dot {
      background: #71dc71;
      width: 10px;
      height: 10px;
      display: block;
      border-radius: 5px;
      margin-right: 5px;
    }
    @media only screen and (max-width: 960px) {
      .swiper-pagination {
        bottom: -6px !important;
      }
      .swiper-slide img {
        margin-bottom: 17px;
      }
      .text-with-icon {
        flex-direction: column;
      }
      .icon-blocks {
        justify-content: center;
        margin: 20px;
      }
      .mobile-flex {
        flex-direction: column;
      }
      .info-box {
        width: auto;
      }
      .product-information {
        margin: 20px auto;
      }
      .mySwiper {
        display: none;
      }
      .section-container {
        overflow: hidden;
      }
      .swiper {
        overflow: visible;
      }
      .mySwiper2 {
        height: 80%;
        width: 90%;
      }
      .outer-wrapper {
        margin: 0;
      }
    }
  </style>

{% assign product = section.settings.product %}
{% assign product_form_id = 'product-form-' | append: section.id %}

<script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'show-more.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>


<div class="section-container">
  <div class="flex mobile-flex">
    <div class="outer-wrapper">
      <div thumbsSlider="" class="swiper mySwiper" style="width: 25%">
          <div class="swiper-wrapper display-flex">
              {% for image in product.images %}
              <div class="swiper-slide">
                <img src="{{image | img_url: 'x300' | crop: 'center' }}" alt="" height="100">
              </div>
            {% endfor %}
          </div>
        </div>
      <div
      style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff;"
      class="swiper mySwiper2" style="width: 75%"
    >
      <div class="swiper-wrapper">
          {% for image in product.images %}
          <div class="swiper-slide">
            <img src="{{image | img_url: 'x300' | crop: 'center' }}" alt="" height="100">
          </div>
        {% endfor %}
      </div>
      <div class="swiper-button-next small-hide"> </div>
      <div class="swiper-button-prev small-hide"> </div>
      <div class="swiper-pagination medium-large-hide"></div>
    </div>
  </div>


  <div class="product-information">
    <div class="info-box">
      <p class="product_title">{{ product.title }}</p>
      <p class="sub_title">{{ product.metafields.product_subtitle.text }}</p>
      <span class="old-price">{{ product.price | money }}</span><span class="new-price-wrapper"><span class="new-price">{{ product.compare_at_price | money }} </span><span class="mws">inkl.MwSt.</span></span>
      <div class="availability"><p div class="dot"> </p><p>{{ product.metafields.delivery_time.duration }}</p></div>
      <product-info
      id="ProductInfo-{{ section.id }}"
      class="product__info-container"
      data-section="{{ section.id }}"
      data-url="{{ product.url }}"
    >
      {%- render 'buy-buttons',
      product: product,
      product_form_id: product_form_id,
      section_id: section.id
    -%}
</product-info>
    </div>
  </div>


  </div>
  <div class="text-with-icon">
    {% for block in section.blocks %}
    <div class="icon-blocks">
      <div class="img">
        <div class="flex">
          <img src="{{ block.settings.icon | img_url: 'x200' }}" alt="" width="50">
        </div>
      </div>
      <div class="text">
        <p>{{block.settings.icon_text_1}}</p>
        <p>{{block.settings.icon_text_2}}</p>
      </div>
    </div>
    {% endfor %}
  </div>
</div>

<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>


<script>
    var swiper = new Swiper(".mySwiper", {
      spaceBetween: 10,
      slidesPerView: 4,
      loop: true,
      watchSlidesProgress: true
    });
    var swiper2 = new Swiper(".mySwiper2", {
      loop: true,
      slidesPerView: 1,
      watchSlidesProgress: true,
      spaceBetween: 5,
      breakpoints: {
        960: {
          navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev"
          }
        }
      },
      pagination: {
            el: ".swiper-pagination",
            clickable: true
      },
      thumbs: {
        swiper: swiper
      }
    });
  </script>

